<div id="pin_show" class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading pin_image">
				<p><%= image_tag @pin.image.url(:medium) %></p>
			</div>
			<div class="panel-body">
				<h1><%= @pin.title %></h1>
				<p class="description"><%= @pin.description %></p>
			</div>
			<div class="panel-footer">
				<div class="row">
					<div class="col-md-6">
						<p class="user">Submitted by <%= @pin.user.name %></p>
					</div>
					<div class="col-md-6">
						<div class="pull-right btn-group"
							<br />
							<%= link_to like_pin_path(@pin), method: :put, class: 'btn btn-default' do %>
								<span class="glyphicon glyphicon-heart">
									<%= @pin.votes_for.size %>
								</span>
							<% end %>
							<% if user_signed_in? %>
								<%= link_to "Edit", edit_pin_path(@pin), class: 'btn btn-default' %>
								<%= link_to "Delete", pin_path, method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-default' %>
							<% end %>
						</div>
					</div>
				</div>
				<%= form_for [@pin, @pin.comments.new], html: { class: 'form-horizontal' } do |f| %>
					<div class="form-group">
						<%= f.input :description, as: :text, input_html: { class: 'form-control' } %>
					</div>
					<div class="form-group">
						<%= f.button :submit, class: 'btn btn-info' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
