<%= simple_form_for @pin, html: { class: 'form-horizontal', multipart: true } do |f| %>
	<% if @pin.errors.any? %>
		<h2><%= pluralize(@pin.errors.count, "error") %> prevented from save</h2>
		<ul>
			<% @pin.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>
	<div class="form-group">
		<%= f.input :title, input_html: { class: 'form-control' } %>
	</div>
	<div class="form-group">
		<%= f.input :description, input_html: { class: 'form-control'} %>
	</div>
	<%= f.button :submit, class: 'btn btn-info' %>
<% end %>
